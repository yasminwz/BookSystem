@model BookSystem.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Nome do Livro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.bookName)
        </dd>
        <dt class = "col-sm-2">
            Preço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.price)
        </dd>
        <dt class = "col-sm-2">
            Número de páginas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.numberOfPages)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.book_id">Editar</a> |
    <a asp-action="Index">Voltar para a lista</a>
</div>
